<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="648.0" prefWidth="600.0" style="-fx-background-color: rgb(0,0,0);"
            xmlns="http://javafx.com/javafx/20.0.1" fx:controller="Client.Controllers.SignupPage.SignupPageController">
    <children>
        <VBox alignment="CENTER" layoutX="90.0" layoutY="93.0" prefHeight="462.0" prefWidth="419.0" spacing="30.0">
            <children>
                <HBox alignment="CENTER" spacing="8.0">
                    <children>
                        <ImageView fitHeight="50.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../Icons/spotify.png"/>
                            </image>
                        </ImageView>
                        <Label text="Spotify" textFill="#fcfcfc">
                            <font>
                                <Font name="Arial Bold" size="25.0"/>
                            </font>
                            <stylesheets>
                                <URL value="@../../css-styles/early-pages-label-buttons.css"/>
                            </stylesheets>
                        </Label>
                    </children>
                </HBox>
                <Label alignment="CENTER" prefHeight="23.0" prefWidth="600.0" text="Sign for free to start listening."
                       textFill="#fcfcfc">
                    <font>
                        <Font name="Arial Bold" size="23.0"/>
                    </font>
                    <stylesheets>
                        <URL value="@../../css-styles/early-pages-label-buttons.css"/>
                    </stylesheets>
                </Label>
                <VBox>
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
                              style="-fx-font-family: Arial; -fx-font-weight: bold;" text="What's your email?">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Text>
                        <TextField fx:id="emailField" prefHeight="26.0" prefWidth="439.0" promptText="Enter your email."
                                   style="-fx-font-family: Arial;"/>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
                              style="-fx-font-family: Arial; -fx-font-weight: bold;" text="Create a password.">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Text>
                        <PasswordField fx:id="passwordField" promptText="Enter a password">
                            <font>
                                <Font name="Arial" size="12.0"/>
                            </font>
                        </PasswordField>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
                              style="-fx-font-family: Arial; -fx-font-weight: bold;" text="What should we call you? ">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Text>
                        <TextField fx:id="usernameField" prefHeight="26.0" prefWidth="320.0"
                                   promptText="Enter a username." style="-fx-font-family: Arial;"/>
                    </children>
                </VBox>
                <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submit" prefHeight="26.0"
                        prefWidth="173.0" stylesheets="@../../css-styles/early-pages-label-buttons.css" text="Submit">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Button>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label stylesheets="@../../css-styles/early-pages-label-buttons.css"
                               text="Do you have an account?">
                            <font>
                                <Font size="1.0"/>
                            </font>
                        </Label>
                        <Button fx:id="loginPageButton" mnemonicParsing="false" onAction="#goLoginPage"
                                prefHeight="31.0" prefWidth="92.0"
                                stylesheets="@../../css-styles/early-pages-label-buttons.css" text="Log In"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
